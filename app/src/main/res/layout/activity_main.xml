<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#EDD9D9"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/skincareimg"
        android:layout_width="172dp"
        android:layout_height="175dp"
        android:contentDescription="skincare"
        app:layout_constraintBottom_toTopOf="@+id/skincareButton"
        app:layout_constraintEnd_toStartOf="@+id/makeupimg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tatchaimg"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/skincare"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/makeupimg"
        android:layout_width="172dp"
        android:layout_height="175dp"
        app:layout_constraintBottom_toTopOf="@+id/makeupButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/skincareimg"
        app:layout_constraintTop_toBottomOf="@+id/BrandDescription"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/makeup"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/skincareButton"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:text="View Skincare"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/makeupButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skincareimg"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/makeupButton"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:text="View Makeup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/skincareButton"
        app:layout_constraintTop_toBottomOf="@+id/makeupimg"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/tatchaimg"
        android:layout_width="201dp"
        android:layout_height="186dp"
        app:layout_constraintBottom_toTopOf="@+id/skincareimg"
        app:layout_constraintEnd_toStartOf="@+id/BrandDescription"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brandtxt"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/tatcha2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/brandtxt"
        android:layout_width="279dp"
        android:layout_height="85dp"
        android:fontFamily="serif"
        android:text="Product/ Brand of the Month"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/pink"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tatchaimg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/BrandDescription"
        android:layout_width="159dp"
        android:layout_height="183dp"
        android:fontFamily="serif"
        android:text="TATCHA - Timeless Japanese Beauty Collection. Shop with us and try our Award -Winning Treasures for Healthy and Glowing Skin!"
        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/makeupimg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tatchaimg"
        app:layout_constraintTop_toBottomOf="@+id/brandtxt"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>